<% layout('layouts/boilerplate') %> 

<h1 class="text-center mt-3 mb-5">Update Campground</h1>
<div class="row container-fluid">
        <form action="/campgrounds/<%=campground._id%>?_method=put" method="post" class="col-4 offset-4 needs-validation" enctype="multipart/form-data" novalidate >
            <label for="title" class="form-label">Title</label>
        <div class="input-group mb-3">
            <input required type="text" class="form-control"name="title" id="title"value=<%=campground.title %>>
        </div>
        <label for="location" class="form-label">Location</label>
        <div class="input-group mb-3">
            <input required type="text"  class="form-control" name="location" id="location"value=<%=campground.location %>>            
        </div>
        <label class="form-label" for="inputGroupFile01">Add Image</label>
        <div class="input-group mb-3">
            <input type="file" class="form-control " name="image" id="inputGroupFile01" multiple>
        </div>
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group mb-3">
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input required type="text"  class="form-control" name="price" id="priceS"placeholder="0.00"value=<%=campground.price %>>                  
            </div> 
        </div>
        <label for="description" class="form-label">Description</label>
        <div class="input-group mb-3">
            <textarea required type="text"  class="form-control" name="description" id="description"><%=campground.description %></textarea>             
        </div>
        <div class="input-group mb-3">
        <% campground.images.forEach((img,i)=> {%>
            <img src="<%=img.newUrl %> " class="img-thumbnail" alt="">  
            <div class="form-check-inline">
                <label class="form-check-label" for="image-<%=i%>">Delete?</label>                         
                <input class="form-check-input" type="checkbox" name="deleteImage[]" value="<%=img.filename%>" id="image-<%=i%>" >                
            </div>
        <% })%>
        </div>
        <div class="mb-3">
            <button class="btn btn-info ">Update Campground</button>
        </div>
        </form>
      </div>
</div>


