<% layout("/layouts/boilerplate") %> 

<div class=" row container-fluid d-flex justify-content-center mt-4">
    <h1 class="text-center mb-4">Login Account</h1>
    <div class=" card p-0  shadow bg-body" style="width: 20rem;height: 26rem;">
      <img src="https://images.unsplash.com/photo-1478131143081-80f7f84ca84d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="rounded-top"alt="">
    <form action="/login" class="px-3 mt-4 needs-validation " novalidate method="post">   
      <div class="form-floating mb-3">
        <input type="text" class="form-control py-0" style="height:2.5rem ;" name="username" id="username" placeholder="Username" required>
        <label for="username" class="form-label d-flex align-items-center">Username</label>
        </div>
        <div class="form-floating mb-4">
          <input type="password" class="form-control" style="height:2.5rem ;" name="password" id="password" placeholder="Password" required>
          <label for="password" class="form-label d-flex align-items-center">Password</label>
        </div>
        <div class="">
        <button class="btn btn-success container-fluid">Login</button>
        </div>
    </form>
    </div>
</div>
 
 
